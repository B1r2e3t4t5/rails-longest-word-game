<h1 class="m-2 d-flex justify-content-center">New game</h1>

<div class="d-flex justify-content-center">
  <% @letters.each do |letter|%>
  <p class="p-5 m-2 border border-dark rounded"><%=letter%></p>
  <% end %>
</div>

<p class="m-2 d-flex justify-content-center">What is the longest word you can find?</p>

<div class="d-flex justify-content-center">
  <form action="/score" method="post" data-turbo="false">
  <input type="text" name="word" value="<%= %>" placeholder="Your word">
  <input type="submit" value="Play" class="btn-primary">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
